<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >
    
    <RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/top_background">
    
   <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        >
         <ImageButton
             android:id="@+id/btn_back"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="@drawable/btn_main_press1"
             android:layout_gravity="center"
             android:scaleType="centerInside"
             android:src="@drawable/backs" />
 
    </LinearLayout>
    
    <TextView android:id="@+id/main_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="关于我们"
        android:textSize="22sp"
        android:textColor="#FCFEFF"/>
    
</RelativeLayout>

    <LinearLayout android:id="@+id/about_us_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/about_us"
        android:orientation="vertical">
        
    </LinearLayout>
    
   <!--  
   <ImageView android:id="@+id/about_us_image"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:src="@drawable/about_us"
       android:scaleType="fitXY"/>
    -->

</LinearLayout>
