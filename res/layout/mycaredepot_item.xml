<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="8dip"
    android:descendantFocusability= "blocksDescendants"
    >
    
    <ImageButton
        android:id="@+id/btn_compile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="9dip"
        android:layout_marginTop="8dp"
        android:focusable="false"
        android:clickable="true"
        android:background="@drawable/icon15"/>

    <TextView
        android:id="@+id/care_depotname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/btn_compile"
        android:text="港汇停车场"
        android:textColor="#505050"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/care_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/care_depotname"
        android:layout_marginLeft="10dip"
        android:layout_toRightOf="@id/btn_compile"
        android:text="1384937053"
        android:layout_marginBottom="8dp"
        android:textSize="18sp" />
    
     <TextView android:id="@+id/repeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/care_time"
        android:layout_below="@id/care_depotname"
        android:ems="8"
        android:textSize="18sp"
        android:singleLine="true"
        android:layout_marginLeft="18dp"
        android:text=""/>
    
    <FrameLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp">
        
     <ImageButton
        android:id="@+id/btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/top_button4"
        android:focusable="false"
        android:clickable="true"
        android:padding="9dip"
        android:visibility="gone" />
     
     <ImageView android:id="@+id/btn_care_time"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@drawable/on"
       android:scaleType="fitXY"
       android:layout_centerVertical="true"
       android:focusable="false"
       android:clickable="true"
      />
    </FrameLayout>
    
      <ImageView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/line"
        android:scaleType="fitXY"
        android:layout_below="@id/care_time"
        />

</RelativeLayout>
