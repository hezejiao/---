<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >
    
    <RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/top_background">
    
   <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        >

         <ImageButton
             android:id="@+id/btn_back"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="@drawable/btn_main_press1"
             android:layout_gravity="center"
             android:scaleType="centerInside"
             android:src="@drawable/backs" />
 
    </LinearLayout>
    
    <TextView android:id="@+id/main_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="语音设置"
        android:textSize="22sp"
        android:textColor="#FCFEFF"/>
    
</RelativeLayout>
   
  <RelativeLayout android:id="@+id/voice_sets"
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:layout_margin="10dp"
      >
   <TextView android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="声音设置"
       android:textSize="18sp"
       android:textColor="#505050"
       android:layout_centerVertical="true"
       android:layout_alignParentLeft="true"/>
   
   <TextView android:id="@+id/voice_type"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_centerVertical="true"
       android:layout_alignParentRight="true"
       android:layout_marginRight="14dp"
       android:text="男声"
       android:textColor="#B2DE7C"
       android:textSize="15sp"/>
      
  </RelativeLayout>
  
  <ImageView android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:src="@drawable/line"
      android:scaleType="fitXY"/>
  
  <RelativeLayout android:id="@+id/to_score"
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:layout_margin="10dp"
      >
   <TextView android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="提示声音"
       android:textSize="18sp"
       android:textColor="#505050"
       android:layout_centerVertical="true"
       android:layout_alignParentLeft="true"/>
   
   <Button android:id="@+id/voice_btn"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_centerVertical="true"
       android:background="@drawable/on"
       android:layout_alignParentRight="true"
       android:layout_marginRight="6dp"/>
      
  </RelativeLayout>
  
  <ImageView android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:src="@drawable/line"
      android:scaleType="fitXY"/>
  
</LinearLayout>
